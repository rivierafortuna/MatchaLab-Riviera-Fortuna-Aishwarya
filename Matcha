    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        AOS.init({ duration: 1000, once: true });

        let cart = [];

        function calc() {
            let base = document.querySelector('input[name="base"]:checked');
            let extras = document.querySelectorAll('.extra:checked');
            let total = parseInt(base.value);
            let names = [base.getAttribute('data-name')];

            extras.forEach(ex => {
                total += parseInt(ex.value);
                names.push(ex.getAttribute('data-name'));
            });

            document.getElementById('preview-price').innerText = "$" + total;
            document.getElementById('preview-list').innerText = names.join(" + ");
            return { total, names };
        }

        function addToCart() {
            const result = calc();
            cart.push(result);
            
            // Update UI
            document.getElementById('cart-count').innerText = cart.length;
            document.getElementById('cart-list').innerHTML = cart.map(item => 
                `<div>‚Ä¢ ${item.names.join(', ')} ($${item.total})</div>`
            ).join('');
            
            let grandTotal = cart.reduce((sum, item) => sum + item.total, 0);
            document.getElementById('total-val').innerText = "$" + grandTotal;

            alert("Added to bag! üçµ");
        }
    </script>
